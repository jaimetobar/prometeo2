<div class="container">
  <div class="row accreditations_index">
      <div class="col-md-12">
          <div class="panel panel-default">
              <div class="panel-heading">
                  <h2>
                    <%= t(".accreditations")%>
                    <%= link_to new_admin_accreditation_path,class: "btn btn-success btn-md pull-right" do %>
                        <span class="glyphicon glyphicon-plus"></span>
                        <%= t(".add_accreditation")%>
                    <% end %>
                  </h2>
                  <% if @course %>
                    <%= t(".for_course_html",course: "#{@course.id} - #{@course.name}") %>
                  <% end %>
              </div>
              <!-- /.panel-heading -->
              <div class="panel-body">
                  <div class="table-responsive">
                      <table class="table table-hover">
                          <thead>
                              <tr>
                                  <th>#</th>
                                  <th><%= t(".name")%></th>
                                  <th><%= t(".description")%></th>
                                  <th><%= t(".role")%></th>
                                  <th><%= t(".courses")%></th>
                                  <th><%= t(".advanced")%></th>
                                  <th class="actions"></th>
                              </tr>
                          </thead>
                          <tbody>
                              <% if !@accreditations.blank? %>
                                <% @accreditations.each do |a|  %>
                                  <tr>
                                      <td><%= a.id %></td>
                                      <td><%= a.name %></td>
                                      <td><%= truncate(a.description) %></td>
                                      <td><%= a.role %></td>
                                      <td><%= link_to("#{a.courses.count} #{t('.courses')}", admin_courses_path(accreditation: a.id)) %></td>
                                      <td>
                                        <% if a.advanced? %>
                                          <span class="glyphicon glyphicon-ok"></span>
                                        <% end %>
                                      </td>
                                      <td>
                                        <%= link_to edit_admin_accreditation_path(a), class: "btn btn-info" do %>
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        <% end %>
                                        <%= link_to admin_accreditation_path(a), method: :delete, data: { confirm: t(".accreditaion_deletion_confirmation") }, class: "btn btn-danger" do %>
                                            <span class="glyphicon glyphicon-trash"></span>
                                        <% end %>
                                      </td>
                                  </tr>
                                <% end %>
                              <% end %>
                          </tbody>
                      </table>
                  </div>
                  <!-- /.table-responsive -->
              </div>
              <!-- /.panel-body -->
          </div>
          <!-- /.panel -->
      </div>
  </div>
</div>
