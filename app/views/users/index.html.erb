<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>
          Partners
          <%= link_to new_user_path,class: "btn btn-success btn-md pull-right" do %>
            <span class="glyphicon glyphicon-user"></span>
            Crear Partner
            <span class="glyphicon glyphicon-plus"></span>
            <% end %>
        </h2>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12">
            <%= form_tag(users_path, method: "get", class: "form-inline search-user-form") do %>
              <%= text_field_tag(:q,@q, placeholder: "Email, Nombre o Partner", class: "form-control") %>
              <%= country_select(:country,"",{priority_countries: ["CO"],include_blank: true, selected: @country}, class:"form-control",name: "country") %>
              <%= button_tag("Buscar", class: "btn btn-success") %>
            <% end %>
          </div>
          <div class="col-xs-12 text-right">
            <%= will_paginate @users, previous_label: "<", next_label: ">" %>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Correo electronico</th>
                <th>Nombre</th>
                <th>Pa√≠s</th>
                <th>Partner</th>
                <th>Roles</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if !@users.blank? %>
                <% @users.each do |user|  %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.email %></td>
                      <td><%= user.name %></td>
                      <td><%= user.country %></td>
                      <td><%= user.partner %></td>
                      <td>
                        <%= link_to "#{user.subscriptions.count} Subscripciones para editar", user_subscriptions_path(user.id) %>
                      </td>
                      <td>
                        <%= link_to edit_user_path(user), class: "btn btn-info" do %>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        <% end %>
                        <%= link_to user_path(user), method: :delete, data: { confirm: 'Esta seguro de eliminar?' }, class: "btn btn-danger" do %>
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        <% end %>
                      </td>
                    </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>
