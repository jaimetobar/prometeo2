<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        Usuarios
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Role</th>
                <th>Category</th>
                <th>Name</th>
                <th>Description</th>
                <th>Tipo de Sesi√≥n</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if !@users.blank? %>
                <% @users.each do |user|  %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.email %></td>
                      <td><%= user.country %></td>
                      <td><%= user.partner %></td>
                      <td>
                        <%= link_to "#{user.subscriptions.count} Subscripciones para editar", user_subscriptions_path(user.id) %>
                      </td>
                      <td>
                        <%= link_to edit_user_path(user), class: "btn btn-primary" do %>
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        <% end %>
                        <%= link_to user_path(user), method: :delete, data: { confirm: 'Esta seguro de eliminar?' }, class: "btn btn-danger" do %>
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        <% end %>
                      </td>
                    </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
</div>