<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                Cursos <%= link_to new_course_path,class: "btn btn-info btn-lg" do %>
                    <span class="glyphicon glyphicon-plus"></span>
                <% end %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Role</th>
                                <th>Category</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Tipo de Sesi√≥n</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if !@courses.blank? %>
                              <% @courses.each do |course|  %>
                                <tr>
                                    <td><%= course.which_roles %></td>
                                    <td><%= course.category %></td>
                                    <td><%= course.name %></td>
                                    <td><%= course.description %></td>
                                    <td><%= course.session_type %></td>
                                    <td>
                                      <%= link_to edit_course_path(course), class: "btn btn-primary" do %>
                                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                      <% end %>
                                      <%= link_to course_path(course), method: :delete, data: { confirm: 'Esta seguro de eliminar?' }, class: "btn btn-danger" do %>
                                          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                      <% end %>
                                    </td>
                                </tr>
                            <% end %>
                             <% end %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
