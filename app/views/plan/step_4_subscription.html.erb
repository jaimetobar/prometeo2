<div class="container step-4">
  <div class="row">
    <div class="col-xs-12 title-row">
      <%= link_to(step_3_schedule_plan_path(role: @role, accreditations: @accreditations_ids), class: "link pull-left") do %>
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="hidden-xs hidden-sm">
          <%= t(".change_accreditations") %>
        </span>
      <% end %>
    </div>
    <div class="col-xs-12 text-center title-row">
      <!--<h4><%= t(".subscription_header") %></h4>-->
      <h4 class="subscription-header">
        <%= t(".subscription_header_html",hours_count: @hours_count, accreditations_count: @accreditations_count) %>
      </h4>
    </div>
    <div class="col-xs-12 col-md-6 col-md-offset-3 form-container">
      <%= form_for @user, url: new_or_update_form_plan_path(role: @role,accreditations: @accreditations_ids),
        method: :patch,
        remote: true,
        html: { class: "form-horizontal" } do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <%= f.submit :submit, value: t(".next"), class: "btn btn-success btn-lg" %>
       <% end %>
    </div>
  </div>
</div>
