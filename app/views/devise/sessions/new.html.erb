<div class="wrapper">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
        <h3 class="panel-title"><%= t(".login_header")%></h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <fieldset>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true,class: "form-control",placeholder: t(".email") %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off",class:"form-control",placeholder: t(".password") %>
              </div>
              <div class="checkbox">
                <label>
                  <% if devise_mapping.rememberable? -%>
                      <%= f.check_box :remember_me %> <%= t(".remember_me")%>
                  <% end -%>
                </label>
              </div>
              <%= f.submit t(".login"),class: "btn btn-lg btn-success btn-block"%>
            </fieldset>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
