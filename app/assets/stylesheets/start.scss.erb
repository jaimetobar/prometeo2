@import "bootstrap-sprockets";
@import "bootstrap";



body {
    overflow-x: hidden;
    font-family: Overpass,"Helvetica Neue",Helvetica,Arial,sans-serif;
}

.text-muted {
    color: #777;
}

.text-primary {
    color: #cc0000;
}

p {
    font-size: 16px;
    line-height: 1.75;
}

p.large {
    font-size: 18px;
}

a,
a:hover,
a:focus,
a:active,
a.active {
    outline: 0;
}

a {
    color: #cc0000;
}

a:hover,
a:focus,
a:active,
a.active {
    color: #a30000;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    text-transform: uppercase;
    font-family: Overpass,"Helvetica Neue",Helvetica,Arial,sans-serif;
    font-weight: 700;
}

.img-centered {
    margin: 0 auto;
}

.bg-light-gray {
    background-color: #f7f7f7;
}

.bg-darkest-gray {
    background-color: #222;
}

.btn-primary {
    border-color: #cc0000;
    text-transform: uppercase;
    font-family: Overpass,"Helvetica Neue",Helvetica,Arial,sans-serif;
    font-weight: 700;
    color: #fff;
    background-color: #cc0000;
}

.btn-primary:hover,
.btn-primary:focus,
.btn-primary:active,
.btn-primary.active,
.open .dropdown-toggle.btn-primary {
    border-color: #820000;
    color: #fff;
    background-color: #a30000;
}

.btn-primary:active,
.btn-primary.active,
.open .dropdown-toggle.btn-primary {
    background-image: none;
}

.btn-primary.disabled,
.btn-primary[disabled],
fieldset[disabled] .btn-primary,
.btn-primary.disabled:hover,
.btn-primary[disabled]:hover,
fieldset[disabled] .btn-primary:hover,
.btn-primary.disabled:focus,
.btn-primary[disabled]:focus,
fieldset[disabled] .btn-primary:focus,
.btn-primary.disabled:active,
.btn-primary[disabled]:active,
fieldset[disabled] .btn-primary:active,
.btn-primary.disabled.active,
.btn-primary[disabled].active,
fieldset[disabled] .btn-primary.active {
    border-color: #cc0000;
    background-color: #cc0000;
}

.btn-primary .badge {
    color: #cc0000;
    background-color: #fff;
}

.btn-xl {
    padding: 20px 40px;
    border-color: #cc0000;
    border-radius: 3px;
    text-transform: uppercase;
    font-family: Overpass,"Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 18px;
    font-weight: 700;
    color: #fff;
    background-color: #cc0000;
}

.btn-xl:hover,
.btn-xl:focus,
.btn-xl:active,
.btn-xl.active,
.open .dropdown-toggle.btn-xl {
    border-color: #820000;
    color: #fff;
    background-color: #a30000;
}

.btn-xl:active,
.btn-xl.active,
.open .dropdown-toggle.btn-xl {
    background-image: none;
}

.btn-xl.disabled,
.btn-xl[disabled],
fieldset[disabled] .btn-xl,
.btn-xl.disabled:hover,
.btn-xl[disabled]:hover,
fieldset[disabled] .btn-xl:hover,
.btn-xl.disabled:focus,
.btn-xl[disabled]:focus,
fieldset[disabled] .btn-xl:focus,
.btn-xl.disabled:active,
.btn-xl[disabled]:active,
fieldset[disabled] .btn-xl:active,
.btn-xl.disabled.active,
.btn-xl[disabled].active,
fieldset[disabled] .btn-xl.active {
    border-color: #cc0000;
    background-color: #cc0000;
}

.btn-xl .badge {
    color: #cc0000;
    background-color: #fff;
}

.navbar-brand {
    cursor: pointer;
    max-width: 80%;
    padding: 1px;
}


.intro {
    background: #000000; /* Old browsers */
    background: -moz-linear-gradient(top,  #000000 0%, #292e33 100%); /* FF3.6-15 */
    background: -webkit-linear-gradient(top,  #000000 0%,#292e33 100%); /* Chrome10-25,Safari5.1-6 */
    background: linear-gradient(to bottom,  #000000 0%,#292e33 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#000000', endColorstr='#292e33',GradientType=0 ); /* IE6-9 */
    position: relative;
    padding: 120px 0;
    h1 {
        font-size: 48px;
        color: #fff;
        margin-top: 0;
    }
    p {
        color: #fff;
        font-size: 20px;
        padding-top: 20px;
    }
    .bg {
        position: absolute;
        height: 100%;
        width: 100%;
        background: image-url("start/bg-intro.png") repeat;
        left: 0;
        top: 0;
    }
}
.cta-primary {
    background-color: #c00;
    border: 0 none;
    color: #fff;
    display: inline-block;
    font-size: 15px;
    font-weight: 700;
    font-family: Overpass,"Helvetica Neue",Helvetica,Arial,sans-serif;
    padding: 10px 15px;
    text-decoration: none;
    text-transform: uppercase;
    transition: background 0.2s ease-in 0s;
    margin: 10px 0;
    &:hover {
        background-color: #ad0000;
        color: #fff;
    }
}
section {
    padding: 100px 0;
    ul {
        font-size: 16px;
    }
    li {
        margin-bottom: 10px;
    }
    .caption {
        font-size: 14px;
    }
}

section h2.section-heading {
    margin-top: 0;
    margin-bottom: 30px;
    font-size: 40px;
}

/* This line had Droid Serif prior to change to Overpass*/
section h3.section-subheading {
    margin-bottom: 75px;
    text-transform: none;
    font-family: Overpass,"Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 16px;
    font-weight: 400;
    margin-left: auto;
    margin-right: auto;
    width: 80%;
    font-size: 18px;
    line-height: 1.4em;
}

@media(min-width:768px) {
    section {
        padding: 120px 0;
    }
}

.service-heading {
    margin: 15px 0;
    text-transform: none;
    font-size: 24px;
}

.portfolio .portfolio-item {
    right: 0;
    margin: 0 0 15px;
}

.portfolio .portfolio-item .portfolio-link {
    display: block;
    position: relative;
    margin: 0 auto;
    max-width: 400px;
    background: #fff;
    img {
      margin: 0 auto;
      width: 200px;
    }
}

.portfolio .portfolio-item .portfolio-link .portfolio-hover {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    background: rgba(204,0,0,.9);
    -webkit-transition: all ease .5s;
    -moz-transition: all ease .5s;
    transition: all ease .5s;
}

.portfolio .portfolio-item .portfolio-link .portfolio-hover:hover {
    opacity: 1;
}

.portfolio .portfolio-item .portfolio-link .portfolio-hover .portfolio-hover-content {
    position: absolute;
    top: 50%;
    width: 100%;
    height: 20px;
    margin-top: -12px;
    text-align: center;
    font-size: 20px;
    color: #fff;
}

.portfolio .portfolio-item .portfolio-link .portfolio-hover .portfolio-hover-content i {
    margin-top: -12px;
}

.portfolio .portfolio-item .portfolio-link .portfolio-hover .portfolio-hover-content h3,
.portfolio .portfolio-item .portfolio-link .portfolio-hover .portfolio-hover-content h4 {
    margin: 0;
}

.portfolio .portfolio-item .portfolio-caption {
    margin: 0 auto;
    padding: 25px;
    max-width: 400px;
    text-align: center;
    background-color: #fff;
}

.portfolio .portfolio-item .portfolio-caption h4 {
    margin: 0;
    text-transform: none;
    font-size: 24px;
}

/* This line had Droid Serif prior to change to Overpass*/
.portfolio .portfolio-item .portfolio-caption p {
    margin: 0;
    font-family: Overpass,"Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 16px;
    font-style: italic;
}

.portfolio * {
    z-index: 2;
}

@media(min-width:767px) {
    .portfolio .portfolio-item {
        margin: 0 0 30px;
    }
}

.team {
    background: #000000; /* Old browsers */
